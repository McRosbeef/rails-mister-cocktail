

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1><%= @cocktail.name %></h1>
      <br>
      <br>
      <div id="cocktails">
        <ul>
          <% @cocktail.doses.each do |dose| %>
           <li><strong><%= dose.ingredient.name %></strong> <i class="fa fa-arrow-right"></i> <%= dose.description %></li>
          <% end %>
        </ul>
        <br>
        <br>
        <br>
        <br>
        <%= link_to "Back", root_path, class: "btn btn-primary" %>
        <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>


