

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="text-center blue"><%= @cocktail.name %></h1>
      <br>
      <br>
      <div id="cocktails">
        <ul class="list-unstyled">
          <% @cocktail.doses.each do |dose| %>
           <li><strong><%= link_to dose.ingredient.name, ingredient_path(dose.ingredient) %></strong> <i class="fa fa-arrow-right"></i> <i><%= dose.description %></i> <%= link_to "", dose_path(dose),class: "fa fa-times", id: "red-cross", method: :delete, data: { confirm: "Really ?!"} %></li>
          <% end %>
        </ul>
        <br>
        <br>
        <br>
        <br>



      </div>
    </div>
  </div>
</div>

  <div class="container">
    <div class="row">
    <!-- BIEN CALER LE FORMULAIRE -->
      <div class="col-xs-4 col-xs-offset-4 col-md-5 col-md-offset-1">
      <%= simple_form_for [@cocktail, @dose] do |f| %>

      <div class="form-inputs">
        <%= f.input :description %>
      </div>
      <div class="form-inputs">
      <%= f.input :ingredient_id, collection: @ingredients, prompt: 'Choose an ingredient' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %> <%= link_to "Back", root_path, class: "btn btn-primary" %>
      </div>

      <% end %>
      </div>
    </div>
  </div>



