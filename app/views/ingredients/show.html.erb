<div class="container">
  <div class="row">
    <div class="co-xs-12 col-md-4 col-md-offset-4">
      <h1 class="text-center"><%= @ingredient.name %></h1>
      <br>
      <br>
      <div id="cocktails">
        <ul class="list-unstyled">
          <% @ingredient.cocktails.each do |cocktail| %>
           <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
          <% end %>
        </ul>
        <br>
        <br>
        <br>
        <br>
          <%= link_to 'Back', cocktails_path %>

      </div>
    </div>
  </div>
</div>
